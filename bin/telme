#!/usr/bin/env python3

import os
import sys
import yaml
import requests

config = yaml.load(open(os.path.expanduser("~/.telme.yaml"), "r").read())

def main():
	message = "Ding!"
	if len(sys.argv) == 2:
		message = sys.argv[1]
	url = f"https://api.telegram.org/bot{config['token']}/sendMessage"
	requests.post(url, {"text": message, "chat_id": config['uid']})

if __name__ == "__main__":
	main()
